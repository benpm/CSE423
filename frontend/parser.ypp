%{
    #include <cstdio>
    #include <iostream>
    #include <vector>
    #include "parsetree.hpp"

    extern int yylex();
    extern int yyparse();
    extern void yyerror(const char *s);

    ParseTree pt;
%}

// Bison fundamentally works by asking flex to get the next token, which it
// returns as an object of type "yystype".  Initially (by default), yystype
// is merely a typedef of "int", but for non-trivial projects, tokens could
// be of any arbitrary data type.  So, to deal with that, the idea is to
// override yystype's default typedef to be a C union instead.  Unions can
// hold all of the types of tokens that Flex could return, and this this means
// we can return ints or floats or strings cleanly.  Bison implements this
// mechanism with the %union directive:
%union {
    int ival;
    float fval;
    char *sval;
    char cval;
    ParseTree pt;
}

%type <pt> program
%type <pt> declarationList
%type <pt> declaration
%type <pt> varDeclaration
%type <pt> scopedVarDeclaration
%type <pt> varDeclList
%type <pt> varDeclInitialize
%type <pt> varDeclId
%type <pt> scopedTypeSpecifier
%type <pt> typeSpecifier
%type <pt> funDeclaration
%type <pt> params
%type <pt> paramList
%type <pt> paramId
%type <pt> statement
%type <pt> expressionStmt
%type <pt> expression
%type <pt> mutable
%type <pt> assignop
%type <pt> unaryAssignop
%type <pt> simpleExpression
%type <pt> andExpression
%type <pt> unaryRelExpression
%type <pt> relExpression
%type <pt> relop
%type <pt> sumExpression
%type <pt> sumop
%type <pt> mulExpression
%type <pt> mulop
%type <pt> unaryExpression
%type <pt> unaryop
%type <pt> factor
%type <pt> immutable
%type <pt> call
%type <pt> args
%type <pt> argList
%type <pt> constant
%type <pt> compoundStmt
%type <pt> localDeclarations
%type <pt> statementList
%type <pt> selectionStmt
%type <pt> elseIfList
%type <pt> iterationStmt
%type <pt> whileStmt
%type <pt> forStmt
%type <pt> returnStmt
%type <pt> breakStmt

//Terminals
%token <sval> INT
%token <sval> FLOAT
%token <sval> CHAR

%token <sval> FOR
%token <sval> WHILE
%token <sval> IF
%token <sval> ELSE
%token <sval> RETURN
%token <sval> BREAK

%token <cval> SEMICOLON
%token <cval> COMMA
%token <cval> LPAREN
%token <cval> RPAREN
%token <cval> LBRACE
%token <cval> RBRACE
%token <cval> LBRACK
%token <cval> RBRACK
%token <cval> EQUAL
%token <cval> PLUS
%token <cval> MINUS
%token <cval> TIMES
%token <cval> DIVIDE
%token <cval> MODULO
%token <sval> PLUSEQUAL
%token <sval> MINUSEQUAL
%token <sval> TIMESEQUAL
%token <sval> DIVEQUAL
%token <sval> MODEQUAL
%token <sval> INCR
%token <sval> DECR
%token <cval> LT
%token <cval> GT
%token <sval> LE
%token <sval> GE
%token <sval> ISEQ
%token <sval> NOTEQ
%token <sval> LOGAND
%token <sval> LOGOR
%token <cval> NOT

%token <sval> STRINGLIT
%token <cval> CHARLIT
%token <ival> INTCONST
%token <fval> FLOATCONST
%token <sval> ID

%token <sval> UNKNOWN

//Grammar
%%
program:
    declarationList
        {
            pt = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::PROGRAM,
                std::vector<ParseTree> { $1 });
        }
;
declarationList:
    declarationList declaration
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::DECLARATION_LIST,
                std::vector<ParseTree> { $1, $2 });
        }
    | declaration
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::DECLARATION_LIST,
                std::vector<ParseTree> { $1 });
        }
;
declaration:
    varDeclaration
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::DECLARATION,
                std::vector<ParseTree> { $1 });
        }
    | funDeclaration
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::DECLARATION,
                std::vector<ParseTree> { $1 });
        }
;
varDeclaration:
    typeSpecifier varDeclList SEMICOLON
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::VAR_DECLARATION,
                std::vector<ParseTree> { $1, $2 });
        }
;
scopedVarDeclaration:
    scopedTypeSpecifier varDeclList SEMICOLON
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::SCOPED_VAR_DECLARATION,
                std::vector<ParseTree> { $1, $2 });
        }
;
varDeclList:
    varDeclList COMMA varDeclInitialize
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::VAR_DECL_LIST,
                std::vector<ParseTree> { $1, $3 });
        }
    | varDeclInitialize
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::VAR_DECL_LIST,
                std::vector<ParseTree> { $1 });
        }
;
varDeclInitialize:
    varDeclId
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::VAR_DECL_INITIALIZE,
                std::vector<ParseTree> { $1 });
        }
    | varDeclId EQUAL simpleExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::VAR_DECL_INITIALIZE,
                std::vector<ParseTree> { $1, $3});
        }
;
varDeclId:
    ID
        {
            $$ = new Tree(Tree::Terminal::ID, Tree::NonTerminal::VAR_DECL_ID,
                std::vector<ParseTree>());
        }
    | ID LBRACK RBRACK
        {
            $$ = new Tree(Tree::Terminal::ARRAY_ID, Tree::NonTerminal::VAR_DECL_ID,
                std::vector<ParseTree>());
        }
    | ID LBRACK constant RBRACK
        {
            $$ = new Tree(Tree::Terminal::ARRAY_ID, Tree::NonTerminal::VAR_DECL_ID,
                std::vector<ParseTree> { $3 });
        }
;
scopedTypeSpecifier:
    typeSpecifier
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::SCOPED_TYPE_SPECIFIER,
                std::vector<ParseTree> { $1 });
        }
;
typeSpecifier:
    INT
        {
            $$ = new Tree(Tree::Terminal::INT, Tree::NonTerminal::TYPE_SPECIFIER,
                std::vector<ParseTree>());
        }
    | FLOAT
        {
            $$ = new Tree(Tree::Terminal::FLOAT, Tree::NonTerminal::TYPE_SPECIFIER,
                std::vector<ParseTree>());
        }
    | CHAR
        {
            $$ = new Tree(Tree::Terminal::CHAR, Tree::NonTerminal::TYPE_SPECIFIER,
                std::vector<ParseTree>());
        }
;
funDeclaration:
    typeSpecifier ID LPAREN params RPAREN statement
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::FUN_DECLARATION,
                std::vector<ParseTree> { $1, $4, $6});
        }
;
params:
    paramList
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::PARAMS,
                std::vector<ParseTree> { $1 });
        }
    | %empty
        {
            $$ = new Tree(Tree::Terminal::EPSILON, Tree::NonTerminal::PARAMS,
                std::vector<ParseTree>());
        }
;
paramList:
    paramList COMMA typeSpecifier paramId
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::PARAM_LIST,
                std::vector<ParseTree> { $1, $3, $4 });
        }
    | typeSpecifier paramId
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::PARAM_LIST,
                std::vector<ParseTree> { $1, $2 });
        }
;
paramId:
    ID
        {
            $$ = new Tree(Tree::Terminal::ID, Tree::NonTerminal::PARAM_ID,
                std::vector<ParseTree>());
        }
    | ID LBRACK RBRACK
        {
            $$ = new Tree(Tree::Terminal::ARRAY_ID, Tree::NonTerminal::PARAM_ID,
                std::vector<ParseTree>());
        }
;
statement:
    expressionStmt
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::STATEMENT,
                std::vector<ParseTree> { $1 });
        }
    | compoundStmt
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::STATEMENT,
                std::vector<ParseTree> { $1 });
        }
    | selectionStmt
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::STATEMENT,
                std::vector<ParseTree> { $1 });
        }
    | iterationStmt
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::STATEMENT,
                std::vector<ParseTree> { $1 });
        }
    | returnStmt
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::STATEMENT,
                std::vector<ParseTree> { $1 });
        }
    | breakStmt
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::STATEMENT,
                std::vector<ParseTree> { $1 });
        }
;
expressionStmt:
    expression SEMICOLON
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::EXPRESSION_STMT,
                std::vector<ParseTree> { $1 });
        }
    | SEMICOLON
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::EXPRESSION_STMT,
                std::vector<ParseTree>());
        }
;
expression:
    mutable assignop expression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::EXPRESSION,
                std::vector<ParseTree> { $2, $3 });
        }
    | unaryAssignop mutable
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
    | mutable unaryAssignop
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::EXPRESSION,
                std::vector<ParseTree> { $2 });
        }
    | simpleExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
;
mutable:
    ID
        {
            $$ = new Tree(Tree::Terminal::ID, Tree::NonTerminal::MUTABLE,
                std::vector<ParseTree>());
        }
    | mutable LBRACK expression RBRACK
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::MUTABLE,
                std::vector<ParseTree> { $1, $3 });
        }
assignop:
    EQUAL
        {
            $$ = new Tree(Tree::Terminal::EQUAL, Tree::NonTerminal::ASSIGN_OP,
                std::vector<ParseTree>());
        }
    | PLUSEQUAL
        {
            $$ = new Tree(Tree::Terminal::PLUSEQUAL, Tree::NonTerminal::ASSIGN_OP,
                std::vector<ParseTree>());
        }
    | MINUSEQUAL
        {
            $$ = new Tree(Tree::Terminal::MINUSEQUAL, Tree::NonTerminal::ASSIGN_OP,
                std::vector<ParseTree>());
        }
    | TIMESEQUAL
        {
            $$ = new Tree(Tree::Terminal::TIMESEQUAL, Tree::NonTerminal::ASSIGN_OP,
                std::vector<ParseTree>());
        }
    | DIVEQUAL
        {
            $$ = new Tree(Tree::Terminal::DIVEQUAL, Tree::NonTerminal::ASSIGN_OP,
                std::vector<ParseTree>());
        }
    | MODEQUAL
        {
            $$ = new Tree(Tree::Terminal::MODEQUAL, Tree::NonTerminal::ASSIGN_OP,
                std::vector<ParseTree>());
        }
unaryAssignop:
    INCR
        {
            $$ = new Tree(Tree::Terminal::INCR, Tree::NonTerminal::UNARY_ASSIGN_OP,
                std::vector<ParseTree>());
        }
    | DECR
        {
            $$ = new Tree(Tree::Terminal::DECR, Tree::NonTerminal::UNARY_ASSIGN_OP,
                std::vector<ParseTree>());
        }
simpleExpression:
    simpleExpression LOGOR andExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::SIMPLE_EXPRESSION,
                std::vector<ParseTree> { $1, $3 });
        }
    | andExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::SIMPLE_EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
;
andExpression:
    andExpression LOGAND unaryRelExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::AND_EXPRESSION,
                std::vector<ParseTree> { $1, $3 });
        }
    | unaryRelExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::AND_EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
;
unaryRelExpression:
    NOT unaryRelExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::UNARY_REL_EXPRESSION,
                std::vector<ParseTree> { $2 });
        }
    | relExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::UNARY_REL_EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
;
relExpression:
    sumExpression relop sumExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::REL_EXPRESSION,
                std::vector<ParseTree> { $1, $2, $3 });
        }
    | sumExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::REL_EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
;
relop:
    LE
        {
            $$ = new Tree(Tree::Terminal::LE, Tree::NonTerminal::REL_OP,
                std::vector<ParseTree>());
        }
    | LT
        {
            $$ = new Tree(Tree::Terminal::LT, Tree::NonTerminal::REL_OP,
                std::vector<ParseTree>());
        }
    | GT
        {
            $$ = new Tree(Tree::Terminal::GT, Tree::NonTerminal::REL_OP,
                std::vector<ParseTree>());
        }
    | GE
        {
            $$ = new Tree(Tree::Terminal::GE, Tree::NonTerminal::REL_OP,
                std::vector<ParseTree>());
        }
    | ISEQ
        {
            $$ = new Tree(Tree::Terminal::ISEQ, Tree::NonTerminal::REL_OP,
                std::vector<ParseTree>());
        }
    | NOTEQ
        {
            $$ = new Tree(Tree::Terminal::NOTEQ, Tree::NonTerminal::REL_OP,
                std::vector<ParseTree>());
        }
;
sumExpression:
    sumExpression sumop mulExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::SUM_EXPRESSION,
                std::vector<ParseTree> { $1, $2, $3 });
        }
    | mulExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::SUM_EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
;
sumop:
    PLUS
        {
            $$ = new Tree(Tree::Terminal::PLUS, Tree::NonTerminal::SUM_OP,
                std::vector<ParseTree>());
        }
    | MINUS
        {
            $$ = new Tree(Tree::Terminal::MINUS, Tree::NonTerminal::SUM_OP,
                std::vector<ParseTree>());
        }
;
mulExpression:
    mulExpression mulop unaryExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::MUL_EXPRESSION,
                std::vector<ParseTree> { $1, $2, $3 });
        }
    | unaryExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::MUL_EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
;
mulop:
    TIMES
        {
            $$ = new Tree(Tree::Terminal::TIMES, Tree::NonTerminal::MUL_OP,
                std::vector<ParseTree>());
        }
    | DIVIDE
        {
            $$ = new Tree(Tree::Terminal::DIVIDE, Tree::NonTerminal::MUL_OP,
                std::vector<ParseTree>());
        }
    | MODULO
        {
            $$ = new Tree(Tree::Terminal::MODULO, Tree::NonTerminal::MUL_OP,
                std::vector<ParseTree>());
        }
;
unaryExpression:
    unaryop unaryExpression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::UNARY_EXPRESSION,
                std::vector<ParseTree> { $1, $2 });
        }
    | factor
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::UNARY_EXPRESSION,
                std::vector<ParseTree> { $1 });
        }
;
unaryop:
    PLUS
        {
            $$ = new Tree(Tree::Terminal::PLUS, Tree::NonTerminal::UNARY_OP,
                std::vector<ParseTree>());
        }
    | MINUS
        {
            $$ = new Tree(Tree::Terminal::MINUS, Tree::NonTerminal::UNARY_OP,
                std::vector<ParseTree>());
        }
;
factor:
    immutable
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::FACTOR,
                std::vector<ParseTree> { $1 });
        }
    | mutable
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::FACTOR,
                std::vector<ParseTree> { $1 });
        }
;
immutable:
    LPAREN expression RPAREN
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::IMMUTABLE,
                std::vector<ParseTree> { $2 });
        }
    | call
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::IMMUTABLE,
                std::vector<ParseTree> { $1 });
        }
    | constant
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::IMMUTABLE,
                std::vector<ParseTree> { $1 });
        }
;
call:
    ID LPAREN args RPAREN
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::CALL,
                std::vector<ParseTree> { $3 });
        }
;
args:
    argList
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::ARGS,
                std::vector<ParseTree> { $1 });
        }
    | %empty
        {
            $$ = new Tree(Tree::Terminal::EPSILON, Tree::NonTerminal::ARGS,
                std::vector<ParseTree>());
        }
;
argList:
    argList COMMA expression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::ARG_LIST,
                std::vector<ParseTree> { $1, $3 });
        }
    | expression
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::ARG_LIST,
                std::vector<ParseTree> { $1 });
        }
;
constant:
    STRINGLIT
        {
            $$ = new Tree(Tree::Terminal::STRINGLIT, Tree::NonTerminal::CONSTANT,
                std::vector<ParseTree>());
        }
    | CHARLIT
        {
            $$ = new Tree(Tree::Terminal::CHARLIT, Tree::NonTerminal::CONSTANT,
                std::vector<ParseTree>());
        }
    | FLOATCONST
        {
            $$ = new Tree(Tree::Terminal::FLOATCONST, Tree::NonTerminal::CONSTANT,
                std::vector<ParseTree>());
        }
    | INTCONST
        {
            $$ = new Tree(Tree::Terminal::INTCONST, Tree::NonTerminal::CONSTANT,
                std::vector<ParseTree>());
        }
;
compoundStmt:
    LBRACE localDeclarations statementList RBRACE
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::COMPOUND_STMT,
                std::vector<ParseTree> { $2, $3 });
        }
;
localDeclarations:
    localDeclarations scopedVarDeclaration
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::LOCAL_DECLARATIONS,
                std::vector<ParseTree> { $1, $2 });
        }
    | %empty
        {
            $$ = new Tree(Tree::Terminal::EPSILON, Tree::NonTerminal::LOCAL_DECLARATIONS,
                std::vector<ParseTree>());
        }
;
statementList:
    statementList statement
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::STATEMENT_LIST,
                std::vector<ParseTree> { $1, $2 });
        }
    | %empty
        {
            $$ = new Tree(Tree::Terminal::EPSILON, Tree::NonTerminal::STATEMENT_LIST,
                std::vector<ParseTree>());
        }
;
selectionStmt:
    IF LPAREN simpleExpression RPAREN LBRACE statement RBRACE elseIfList
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::SELECTION_STMT,
                std::vector<ParseTree> { $3, $6, $8 });
        }
    | IF LPAREN simpleExpression RPAREN LBRACE statement RBRACE
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::SELECTION_STMT,
                std::vector<ParseTree> { $3, $6 });
        }
;
elseIfList:
    elseIfList ELSE IF LPAREN simpleExpression RPAREN LBRACE statement RBRACE
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::ELSE_IF_LIST,
                std::vector<ParseTree> { $1, $5, $8 });
        }
    | %empty
        {
            $$ = new Tree(Tree::Terminal::EPSILON, Tree::NonTerminal::ELSE_IF_LIST,
                std::vector<ParseTree>());
        }
;
iterationStmt:
    whileStmt
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::ITERATION_STMT,
                std::vector<ParseTree> { $1 });
        }
    | forStmt
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::ITERATION_STMT,
                std::vector<ParseTree> { $1 });
        }
;
whileStmt:
    WHILE LPAREN simpleExpression RPAREN LBRACE statement RBRACE
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::WHILE_STMT,
                std::vector<ParseTree> { $3, $6 });
        }
;
forStmt:
    FOR LPAREN typeSpecifier varDeclList SEMICOLON relExpression SEMICOLON expression RPAREN
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::FOR_STMT,
                std::vector<ParseTree> { $3, $4, $6, $8 });
        }
;
returnStmt:
    RETURN SEMICOLON
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::RETURN_STMT,
                std::vector<ParseTree>());
        }
    | RETURN expression SEMICOLON
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::RETURN_STMT,
                std::vector<ParseTree> { $2 });
        }
;
breakStmt:
    BREAK SEMICOLON
        {
            $$ = new Tree(Tree::Terminal::NONE, Tree::NonTerminal::BREAK_STMT,
                std::vector<ParseTree>());
        }
;
%%
